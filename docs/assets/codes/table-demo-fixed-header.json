  </tbody>\r\n    </nz-table>\r\n  `\r\n})\r\nexport class NzDemoTableFixedHeaderComponent implements OnInit {\r\n  listOfData: ItemData[] = [];\r\n\r\n  ngOnInit(): void {\r\n    const data = [];\r\n    for (let i = 0; i < 100; i++) {\r\n      data.push({\r\n        name: `Edward King ${i}`,\r\n        age: 32,\r\n        address: `London, Park Lane no. ${i}`\r\n      });\r\n    }\r\n    this.listOfData = data;\r\n  }\r\n}\r\n"}
