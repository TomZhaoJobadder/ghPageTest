/span></span><span class=\"token punctuation\">,</span>\r\n  changeDetection<span class=\"token punctuation\">:</span> ChangeDetectionStrategy<span class=\"token punctuation\">.</span>OnPush\r\n<span class=\"token punctuation\">}</span><span class=\"token punctuation\">)</span>\r\n<span class=\"token keyword\">export</span> <span class=\"token keyword\">class</span> <span class=\"token class-name\">NzDemoDaySelectorReactiveComponent</span> <span class=\"token keyword\">implements</span> <span class=\"token class-name\">OnInit</span> <span class=\"token punctuation\">{</span>\r\n  daysOfWeek<span class=\"token operator\">?</span><span class=\"token punctuation\">:</span> DaysOfWeek<span class=\"token punctuation\">;</span>\r\n  dayForm<span class=\"token punctuation\">:</span> FormGroup<span class=\"token punctuation\">;</span>\r\n\r\n  <span class=\"token keyword\">constructor</span><span class=\"token punctuation\">(</span><span class=\"token keyword\">private</span> readonly fb<span class=\"token punctuation\">:</span> FormBuilder<span class=\"token punctuation\">)</span><span class=\"token punctuation\">{</span><span class=\"token punctuation\">}</span>\r\n\r\n  <span class=\"token function\">ngOnInit</span><span class=\"token punctuation\">(</span><span class=\"token punctuation\">)</span><span class=\"token punctuation\">:</span> <span class=\"token keyword\">void</span> <span class=\"token punctuation\">{</span>\r\n    <span class=\"token keyword\">this</span><span class=\"token punctuation\">.</span>daysOfWeek <span class=\"token operator\">=</span> <span class=\"token punctuation\">{</span>\r\n      monday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">false</span><span class=\"token punctuation\">,</span>\r\n      tuesday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">false</span><span class=\"token punctuation\">,</span>\r\n      wednesday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">false</span><span class=\"token punctuation\">,</span>\r\n      thursday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">false</span><span class=\"token punctuation\">,</span>\r\n      friday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">false</span><span class=\"token punctuation\">,</span>\r\n      saturday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">false</span><span class=\"token punctuation\">,</span>\r\n      sunday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">false</span>\r\n    <span class=\"token punctuation\">}</span>\r\n\r\n    <span class=\"token keyword\">this</span><span class=\"token punctuation\">.</span>dayForm <span class=\"token operator\">=</span> <span class=\"token keyword\">this</span><span class=\"token punctuation\">.</span>fb<span class=\"token punctuation\">.</span><span class=\"token function\">group</span><span class=\"token punctuation\">(</span><span class=\"token punctuation\">{</span>\r\n      dayFormControl<span class=\"token punctuation\">:</span> <span class=\"token punctuation\">[</span><span class=\"token keyword\">this</span><span class=\"token punctuation\">.</span>daysOfWeek<span class=\"token punctuation\">]</span>\r\n    <span class=\"token punctuation\">}</span><span class=\"token punctuation\">)</span><span class=\"token punctuation\">;</span>\r\n  <span class=\"token punctuation\">}</span>\r\n\r\n  <span class=\"token function\">asIsOrder</span><span class=\"token punctuation\">(</span>_a<span class=\"token punctuation\">:</span> <span class=\"token keyword\">any</span><span class=\"token punctuation\">,</span> _b<span class=\"token punctuation\">:</span> <span class=\"token keyword\">any</span><span class=\"token punctuation\">)</span> <span class=\"token punctuation\">{</span>\r\n    <span class=\"token keyword\">return</span> <span class=\"token number\">1</span><span class=\"token punctuation\">;</span>\r\n  <span class=\"token punctuation\">}</span>\r\n<span class=\"token punctuation\">}</span>\r\n\r\n<span class=\"token keyword\">export</span> <span class=\"token keyword\">class</span> <span class=\"token class-name\">DaysOfWeek</span> <span class=\"token punctuation\">{</span>\r\n  monday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">boolean</span><span class=\"token punctuation\">;</span>\r\n  tuesday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">boolean</span><span class=\"token punctuation\">;</span>\r\n  wednesday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">boolean</span><span class=\"token punctuation\">;</span>\r\n  thursday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">boolean</span><span class=\"token punctuation\">;</span>\r\n  friday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">boolean</span><span class=\"token punctuation\">;</span>\r\n  saturday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">boolean</span><span class=\"token punctuation\">;</span>\r\n  sunday<span class=\"token punctuation\">:</span> <span class=\"token keyword\">boolean</span><span class=\"token punctuation\">;</span>\r\n<span class=\"token punctuation\">}</span>\r\n","rawCode":"import { Component, ChangeDetectionStrategy, OnInit } from '@angular/core';\r\nimport { FormBuilder, FormGroup } from '@angular/forms';\r\n\r\n@Component({\r\n  selector: 'nz-demo-day-selector-reactive',\r\n  template: `<h3>Day selector demo using Reactive Form</h3>\r\n            <form [formGroup]=\"dayForm\">\r\n                <p>\r\n                    <sc-day-selector formControlName=\"dayFormControl\"></sc-day-selector>\r\n                </p>\r\n                <div *ngFor=\"let day of daysOfWeek | keyvalue : asIsOrder\">\r\n                  <label>The Selected day {{ day.key }} is: {{ day.value }}</label>\r\n                </div>\r\n            </form>`,\r\n  changeDetection: ChangeDetectionStrategy.OnPush\r\n})\r\nexport class NzDemoDaySelectorReactiveComponent implements OnInit {\r\n  daysOfWeek?: DaysOfWeek;\r\n  dayForm: FormGroup;\r\n\r\n  constructor(private readonly fb: FormBuilder){}\r\n\r\n  ngOnInit(): void {\r\n    this.daysOfWeek = {\r\n      monday: false,\r\n      tuesday: false,\r\n      wednesday: false,\r\n      thursday: false,\r\n      friday: false,\r\n      saturday: false,\r\n      sunday: false\r\n    }\r\n\r\n    this.dayForm = this.fb.group({\r\n      dayFormControl: [this.daysOfWeek]\r\n    });\r\n  }\r\n\r\n  asIsOrder(_a: any, _b: any) {\r\n    return 1;\r\n  }\r\n}\r\n\r\nexport class DaysOfWeek {\r\n  monday: boolean;\r\n  tuesday: boolean;\r\n  wednesday: boolean;\r\n  thursday: boolean;\r\n  friday: boolean;\r\n  saturday: boolean;\r\n  sunday: boolean;\r\n}\r\n"}
